@model JustAsk.Web.ViewModels.Idea.IdeaViewModel
@{
    ViewBag.Title = $"Idea {Model.Id}";
}

<div class="row">
    <div class="col-md-1">
        <div class="well text-center">
            <div class="left">
            </div>
            <div class="">
                <div data-action="votes-count" data-id="@Model.Id" class="row">
                    <h3 id="votes-count"><strong>@Model.Votes</strong></h3>
                    <h5 id="votes-count-h5">votes</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1">
        <div class="well text-center">
            <div class="row">@Model.CommentsCount</div>
            <div class="row">comments</div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <h1>
                <a href="@Model.Url">@Model.Title</a>
            </h1>
        </div>
            <p>@Model.Description</p>

        @using (Html.BeginForm("Add", "Comments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Add comment.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(c => c.NewComment.Content, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(c => c.NewComment.Content, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.NewComment.AuthorEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(c => c.NewComment.AuthorEmail, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Add comment" />
                </div>
            </div>
        }

        @foreach(var comment in Model.Comments)
        {
            <hr />
            <h4><strong>@comment.HiddenEmail</strong></h4>
            <p>@comment.CreatedOn</p>
            <p>@comment.SanitizedContent</p>
        }
    </div>
</div>