@model JustAsk.Web.ViewModels.Idea.IdeaViewModel
@{
    ViewBag.Title = $"Idea {Model.Id}";
}

<div class="row">
    <div class="col-md-1">
        <div class="well text-center">
            <div class="left">
            </div>
            <div class="">
                <div data-action="votes-count" data-id="@Model.Id" class="row">
                    <h3 id="votes-count"><strong>@Model.Votes</strong></h3>
                    <h5 id="votes-count-h5">votes</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1">
        <div class="well text-center">
            <div class="row">@Model.CommentsCount</div>
            <div class="row">comments</div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <h1>
                <a href="@Model.Url">@Model.Title</a>
            </h1>
        </div>
        <p>@Model.Description</p>

        <h3>@Html.ActionLink("Add comment", "AddComment", "Comments", null, null)</h3>

        @foreach (var comment in Model.Comments)
        {
            <hr />
            <h4><strong>@comment.HiddenEmail</strong></h4>
            <p>@comment.CreatedOn</p>
            <p>@comment.SanitizedContent</p>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquesryval")
}